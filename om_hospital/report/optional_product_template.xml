<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Define QWeb template for printing optional orders -->
    <template id="report_optional_product_orders">
        <t t-call="web.external_layout">

            <div class="container">
                <h2>Optional Orders</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Description</th>
                            <th>Quantity</th>
                            <th>Unit Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="docs.sale_order_option_ids" t-as="object">
                            <td><t t-esc="object.name"/></td>
                            <td><t t-esc="object.quantity"/></td>
                            <td><t t-esc="object.price_unit"/></td>
                        </tr>
                    </tbody>
                </table>
                <p>Payment terms: End of Following Month</p>
            </div>
        </t>
    </template>

    <template id="report_optional_product_template">                       
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="om_hospital.report_optional_product_orders"/>
            </t>
        </t>
    </template>
</odoo>
