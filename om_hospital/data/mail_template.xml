<?xml version="1.0" encoding="utf-8"?>
<odoo> 
    <data>
        <record id="patient_card_email_template" model="mail.template">
            <field name="name">Patient Card Send by email</field>
            <field name="model_id" ref="om_hospital.model_hospital_patient"/>
            <field name="email_from">aniphand21@gmail.com</field>
            <field name="email_to">{{object.email}}</field>
            <field name="subject">Patient card {{ object.gender }}</field>
            <field name="description">Sent to patient with their invoices in attachment</field>
            <field name="auto_delete" eval='True' />
            <field name="body_html" type="html"> 
                <div style="margin : 0px; padding:0px">
                    <p style = "margin : 0px;padding : 0px;font-size : 13px;">
                       Dear
                       <t t-out="object.name_is"></t>
                       <br></br>
                       here is your patient card with reference
                       <br></br>
                       Age : <t t-out="object.age"></t>
                       Contact Number : <t t-out ="object.tag_ids"></t>
                       <br></br>
                       if you have queries feel free to ask
                    </p>
                </div>
            </field>
        </record>
    </data>
</odoo>