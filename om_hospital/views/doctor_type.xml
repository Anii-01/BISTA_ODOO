<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_hospital_doctor_type_form" model="ir.ui.view">
        <field name="name">hospital.doctor.type.form</field>
        <field name="model">hospital.doctor.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="type"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hospital_doctor_type_tree" model="ir.ui.view">
        <field name="name">hospital.doctor.type.tree</field>
        <field name="model">hospital.doctor.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="type"/>
            </tree>
        </field>
    </record>



    <record id="action_hospital_doctors_type" model="ir.actions.act_window">
        <field name="name">Doctors Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.doctor.type</field>
        <field name="view_mode">tree,form</field>
        <!-- <field name="view_id" ref="view_hospital_doctor_tree"/> -->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new BACS Direct Debit Instruction.
            </p>
        </field>
    </record>
</odoo>
