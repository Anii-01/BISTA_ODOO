<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hospital_doctor_form" model="ir.ui.view">
        <field name="name">hospital.doctor.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_doctor_xls_button" string="Generate XLS" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible':[('active','=',True)]}"/>
                    <group>
                        <field name="name"/>
                        <field name="user_id"/>
                        <field name="ref"/>
                        <field name="gender"/>
                        <field name="active" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hospital_doctor_tree" model="ir.ui.view">
        <field name="name">hospital.doctor.tree</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="ref"/>
                <field name="gender"/>
            </tree>
        </field>
    </record>

    <record id="action_hospital_doctor" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">tree,form</field>
        <!-- <field name="view_id" ref="view_hospital_doctor_tree"/> -->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new BACS Direct Debit Instruction.
            </p>
        </field>
    </record>

</odoo>
