<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="product_add_wizard_sale_view_form" model="ir.ui.view">
        <field name="name">product.add.wizard.sale.form</field>
        <field name="model">product.add.wizard.sale</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="new_product_name" />
                    <field name="new_quantity" />
                </group>
                <footer>
                    <button name="action_button_add_product_sales" string="Add Product" type="object" class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_product_add_wizard_sale" model="ir.actions.act_window">
        <field name="name">Add Product Wizard Sale</field>
        <field name="res_model">product.add.wizard.sale</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref ="product_add_wizard_sale_view_form" />
        <field name="target">new</field>
        <field name="context">{
            'dialog_size' : 'medium',
        }</field>
    </record>


    <record id="sale_order_addwiz_inherit" model="ir.ui.view">
        <field name="name">sale.order.addwiz.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//button[@name='action_cancel']" position="after">
                    <header>
                        <button id="button_wizard_sale_add_id" name="%(action_product_add_wizard_sale)d"
                            string="Wizard Add Product" type="action"
                            class="btn-primary" />
                    </header>
                </xpath>
            </data>
        </field>
    </record>


</odoo>