<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="product_add_wizard_view_form" model="ir.ui.view">
        <field name="name">product.add.wizard.form</field>
        <field name="model">product.add.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="new_product_name" />
                    <field name="new_quantity" />
                    <field name="purchase_id" />
                </group>
                <footer>
                    <button name="action_button_add_product" string="Add Product" type="object" class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_product_add_wizard" model="ir.actions.act_window">
        <field name = "context">{"default_purchase_id":active_id}</field>
        <field name="name">Add Product Wizard</field>
        <field name="res_model">product.add.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref ="product_add_wizard_view_form" />
        <field name="target">new</field>
        <field name="context">{
            'dialog_size' : 'medium',
        }</field>
    </record>

    <record id="purchase_order_addwiz_inherit" model="ir.ui.view">
        <field name="name">purchase.order.addwiz.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//button[@name='button_unlock']" position="after">
                    <header>
                        <button id="button_wizard_add_id" name="%(action_product_add_wizard)d"
                            string="Wiz Add Product" type="action"
                            class="btn-primary" />
                    </header>
                </xpath>
            </data>
        </field>
    </record>


</odoo>