<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- module-->
    <record model="ir.module.category" id="module_category_hospital2">
        <field name="name">Hospital Operation Management</field>
        <field name="description">Category for Hospital Operation</field>
        <field name="sequence">45</field>
    </record>

    <!-- group -->
    <record id="group_hospital_doctor2" model="res.groups">
        <field name="name">Doctor2</field>
        <field name="category_id" ref="module_category_hospital2"/>
    </record>

     <!-- group -->
    <record id="group_hospital_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_hospital2"></field>
        <field name="implied_ids" eval="[(4,ref('group_hospital_doctor2'))]"/>
    </record>

     <!-- record rules -->
    <record model="ir.rule" id="patient_record_rule_own">
        <field name="name">See Only His Patient</field>
        <field name="model_id" ref="model_hospital_patient"/>
        <field name="domain_force">[('user_id','=',user.id)]</field>
        <field name="groups" eval="[(4,ref('group_hospital_doctor2'))]"/>
        
    </record>


    <!-- <record model="ir.rule" id="patient_record_rule_own">
        <field name="name">See All Patient</field>
        <field name="model_id" ref="model_hospital_patient"/>
        <field name="domain_force">[]</field>
        <field name="groups" eval="[(4,ref('group_hospital_manager'))]"/>
    </record>  -->

</odoo>
