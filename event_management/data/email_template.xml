<odoo>
    <data>
        <record id="email_template_registration_status" model="mail.template">
            <field name="name">Registration Status Update</field>
            <field name="model_id" ref="model_event_registrations" />
            <field name="subject">Your registration status has been updated</field>
            <field name="email_from">{{user.email}}</field>
            <field name="email_to">{{object.attendee_id.email}}</field>
            <field name="email_cc">{{object.event_id.organizer_id.email}}</field>
            <field name="body_html" type="html">
                <div>
                    <p>Hello
                        <t t-out="object.attendee_id.name" />,
                    </p>
                    <p>Your registration for the event
                        <t t-out="object.event_id.name" /> has been
                        <t t-out="object.state" />
                    </p>
                    <p>Thank you!</p>
                </div>
            </field>
        </record>
    </data>
</odoo>
