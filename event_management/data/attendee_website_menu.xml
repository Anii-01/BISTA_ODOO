<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="menu_attendee_registration" model="website.menu">
            <field name="name">Attendee Registration</field>
            <field name="url">/event/attendee_registration</field>
            <field name="parent_id" ref="website.main_menu" />
            <field name="sequence" type="int">95</field>
        </record>
    </data>

    <template id="create_event_attendee_form">
        <t t-call="website.layout">
            <style>
                .form-group {
                margin-bottom: 20px;
                }
                .control-label {
                font-weight: bold;
                color: #333;
                }
                .form-control {
                border-radius: 5px;
                border: 1px solid #ccc;
                padding: 10px;
                width: 100%;
                max-width: 100%;
                }
                .btn-primary {
                border-radius: 50px;
                box-shadow: 0 .125rem .25rem rgba(0, 0, 0, .075)!important;
                background: linear-gradient(45deg, #007bff, #0056b3);
                border: none;
                color: white;
                text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
                transition: background 0.3s ease;
                padding: 12px 30px;
                font-size: 16px;
                }
                .btn-primary:hover {
                background: linear-gradient(45deg, #0056b3, #007bff);
                }
            </style>
            <div id="wrap">
                <div class="oe_structure">
                    <div class="container">
                        <h2 class="text-center mt-5 mb-4">Event Attendee Registration Form</h2>
                        <form role="form" action="/create_attendee/attendee_registration"
                            method="post" class="mt-4">
                            <input type="hidden" name="csrf_token"
                                t-att-value="request.csrf_token()" />
                            <div class="row">
                                <!-- <div class="form-group col-md-6">
                                    <label for="attendees" class="control-label">Attendee Name</label>
                                    <select name="attendees" id="attendees" class="form-control"
                                        required="required">
                                        <option t-att-value="''" t-att-disabled="True"
                                            t-att-selected="True">Select an attendee</option>
                                        <t t-foreach="attendees" t-as="attendee"> 
                                            <option t-esc="attendee" />
                                        </t>
                                    </select>
                                </div> -->
                                <div class="form-group col-md-6">
                                    <label for="name" class="control-label">Attendee Name</label>
                                    <input type="text" name="name" t-att-value="name"
                                        id="name"
                                        class="form-control" placeholder="Aniket.."
                                        required="required" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="name" class="control-label">Events</label>
                                    <select name="name" id="event_names" class="form-control"
                                        required="required">
                                        <option t-att-value="''" t-att-disabled="True"
                                            t-att-selected="True">Select an event</option>
                                        <t t-foreach="event_names" t-as="event">
                                            <option t-esc="event" />
                                        </t>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="email" class="control-label">Email</label>
                                    <input type="email" name="email" t-att-value="email" id="email"
                                        class="form-control" placeholder="e.g. attendee@gmail.com"
                                        required="required" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="phone" class="control-label">Phone</label>
                                    <input type="tel" name="phone" t-att-value="phone" id="phone"
                                        class="form-control" placeholder="e.g. 123-456-7890"
                                        required="required" />
                                </div>
                            </div>
                            <div class="text-center mt-4">
                                <button type="submit" class="btn btn-primary">
                                    Submit
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </t>
    </template>

    
    <record id="thanks_event__attendee_form" model="website.page">
        <field name="name">Thanks (Contact us)</field>
        <field name="type">qweb</field>
        <field name="url">/contactus-thank-you</field>
        <field name="website_indexed" eval="False" />
        <field name="is_published">True</field>
        <field name="key">event_management.thanks_event__attendee_form</field>
        <field name="arch" type="xml">
            <t name="Thanks (Contact us)" t-name="event_management.thanks_event__attendee_form">
                <t t-call="website.layout">
                    <div id="wrap" class="oe_structure oe_empty">
                        <section class="s_text_block pt40 pb40 o_colored_level "
                            data-snippet="s_text_block">
                            <div class="container s_allow_columns">
                                <div class="row">
                                    <div class="col-lg-7 col-xl-6 me-lg-auto">
                                        <span
                                            class="d-block fa fa-4x fa-thumbs-up mx-auto rounded-circle bg-primary" />
                                        <br />
                                        <h1 class="text-center">Thank You!</h1>
                                        <div class="pb16 pt16 s_hr" data-snippet="s_hr"
                                            data-name="Separator">
                                            <hr
                                                class="mx-auto border-top w-50 border-dark text-center" />
                                        </div>
                                        <h5 class="text-center">
                                            <span class="fa fa-check-circle" />
                                            <span>Your message has been sent <b>successfully</b></span>
                                        </h5>
                                        <p class="text-center">We will get back to you shortly.</p>
                                    </div>
                                    <div class="col-lg-4">
                                        <ul class="list-unstyled mb-0 ps-2">
                                            <li>My Company</li>
                                            <li>
                                                <i class="fa fa-map-marker fa-fw me-2" />
                                                <span class="o_force_ltr">3575 Fake Buena Vista
                                                    Avenue</span>
                                            </li>
                                            <li>
                                                <i class="fa fa-phone fa-fw me-2" />
                                                <span class="o_force_ltr">+1 (650) 555-0111</span>
                                            </li>
                                            <li>
                                                <i class="fa fa-1x fa-fw fa-envelope mailto:me-2" />
                                                <span>info@yourcompany.example.com</span>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                    <input t-if='website.plausible_shared_key' type='hidden'
                        class='js_plausible_push' data-event-name='Lead Generation'
                        data-event-params='{"CTA": "Contact Us"}' />
                </t>
            </t>
        </field>
    </record>
</odoo>