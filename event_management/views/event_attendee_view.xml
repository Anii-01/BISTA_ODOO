<odoo>
    <data>
        <record id="view_event_attendee_form" model="ir.ui.view">
            <field name="name">event.attendee.form</field>
            <field name="model">event.attendee</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="email" />
                            <field name="phone" />
                            <field name="user_id" />
                            <field name="event_ids" widget="many2many_tags" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_event_attendee_tree" model="ir.ui.view">
            <field name="name">event.attendee.tree</field>
            <field name="model">event.attendee</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="email" />
                    <field name="phone" />

                </tree>
            </field>
        </record>

        <record id="action_event_attendee" model="ir.actions.act_window">
            <field name="name">Event Attendee</field>
            <field name="res_model">event.attendee</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_event_attendee_tree" />
        </record>
    </data>
</odoo>
