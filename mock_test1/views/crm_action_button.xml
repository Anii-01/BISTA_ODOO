<?xml version="1.0"?>
<odoo>
        <data>
            <record id="contact_orderline_smart_button" model="ir.ui.view">
                <field name="name">contact.orderline.smart.button</field>
                <field name="model">res.partner</field>
                <field name="inherit_id" ref="base.view_partner_form" />
                <field name="arch" type="xml">
                    <div name="button_box" position="inside">
                        <button class="oe_stat_button" type="object" name="action_view_orderline"
                            icon="fa-shopping-cart">
                            <field string="SOL" name="orderline_count" widget="statinfo"/>
                        </button>
                    </div>
                </field>
            </record>
        </data>
</odoo>
