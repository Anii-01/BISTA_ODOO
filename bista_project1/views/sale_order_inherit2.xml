<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--sale order inherit-->
    <record id="confirm_id_form_inherit" model="ir.ui.view">
        <field name="name">confirm_id.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="confirm_user_id"/>
                    <header>
                        <button name="check_orm" string="Check ORM" type="object" class="oe_highlight"/>
                    </header>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="Customer_Country"/>
                </xpath>

            </data>
        </field>
    </record>

    <!--sale order line inherit-->
    <record id="sale_order_line_inherit" model="ir.ui.view">
        <field name="name">sale.order.line.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <data>
                <!-- <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="confirm_user_id"/>
                </xpath> -->
                <xpath expr="//field[@name='order_line']//tree//field[@name='name']" position="before">
                    <field name="user"/>
                </xpath>
            </data>
        </field>
    </record>

</odoo>
