<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- module-->
    <record model="ir.module.category" id="module_category_bista">
        <field name="name">employee management</field>
        <field name="description">Category for employee management</field>
        <field name="sequence">45</field>
    </record>

    <!-- group -->
    <record id="group_employee_management" model="res.groups">
        <field name="name">Employee_Management</field>
        <field name="category_id" ref="module_category_bista"/>
    </record>

     <!-- record rules -->
    <record model="ir.rule" id="employee_record_rule_own">
        <field name="name">See Only His Employees</field>
        <field name="model_id" ref="model_bista_employee"/>
        <field name="domain_force">[('user_id','=',user.id)]</field>
        <field name="groups" eval="[(4,ref('group_employee_management'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record> 

